{% extends 'base.html.twig'%}

{% block title%}
    Liste des articles
{% endblock %}

{% block body %}
        <div class="row" style="margin : 1rem">
            <div class="col-md-10">
                <div class="container">
                    <div class="row ">
                        {% for art in arts %}
                            {% set imagefile = "" %}

                            <div class="col-md-3">
                                <div class="card mb-3">
                                    <div style="padding: 6px">
                                        <a href="{{ path('show_art', {'slug' : art.slug}) }}">
                                            {% for image in art.images|slice(0, 1) %}
                                                <img src="/uploads/{{ image.name }}" style="max-width: 100%; max-height: 100%">
                                            {% endfor %}
                                        </a>
                                        <a style="color : lightgrey" href="{{ path('show_art', {'slug' : art.slug}) }}">
                                            {{ art.name }}
                                        </a>
                                        <p>{{ art.prix }} â‚¬</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>
{% endblock %}