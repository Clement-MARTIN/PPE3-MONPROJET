{% extends 'base.html.twig' %}

{% block title %} - Ajouter un article{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="container mt-5 bg-light" style="border-radius: 0.5rem">
        <h2 class="mt-3">Créer votre article</h2>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.name) }}
            </div>
            <div class="col-md-3">
                {{ form_row(form.prix) }}
            </div>
            <div class="col-md-3">
                {{ form_row(form.fraisDePort) }}
            </div>
            <div class="col-md-12">
                {{ form_row(form.description) }}
            </div>
            <div class="col-md-2">
                {{ form_row(form.quantite) }}
            </div>
            <div class="col-md-3">
                {{ form_row(form.origine) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.idCat) }}
            </div>
            <div class="col-md-3">
                {{ form_row(form.images) }}
            </div>
        </div>
        <button type="submit" class="btn btn-success mb-3 ">Créer l'article</button>
    </div>

    {{ form_end(form) }}
{% endblock %}