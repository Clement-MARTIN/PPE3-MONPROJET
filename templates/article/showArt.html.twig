{% extends 'base.html.twig'%}

{% block title %}
    {{art.name}}
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <div class="test">
                    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            {% for image in art.images %}
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{ loop.index0 }}" {% if loop.first %} class="active" {% endif %}></button>
                            {% endfor %}
                        </div>
                        <div class="carousel-inner">
                            {% for image in art.images %}
                                <div class="carousel-item {% if loop.first %}active{% endif %}">
                                    <img src="/uploads/{{ image.name }}" class="d-block w-100" alt="First slide">
                                </div>
                            {% endfor %}
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mt-4">
                   <p><u><strong>{{ art.name }}</u> Origine : {{ art.origine }}</strong></p>
                </div>
                <div class="mt-2">
                    <p><strong>Description de l'article :</strong> <br> {{ art.description | raw }}</p>
                </div>
                <div class="mt-4">
                   <p><strong>Prix à l'unité :&nbsp;</strong>{{ art.prix }}&euro;</p>
                </div>
                <div class="mt-4">
                   <p><strong>Catégorie de l'article : </strong>{{ art.idCat.nameCat }}</p>
                </div>
                <div class="mt-4">
                   <p><strong>En stock :</strong><br>{{ art.quantite }} disponible(s)</p>
                </div>
            </div>
        </div>
    </div>
    {{ dump(art) }}
{% endblock %}