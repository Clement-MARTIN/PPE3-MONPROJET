<html>
  <head>
    <meta charset="UTF-8">
    <title>KNC-Market{% block title %} Accueil{% endblock %}</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="/css/cssKevin.css"/>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    {# JS bootstrap #}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    
    {% block stylesheets %}
    {% endblock %}

  </head>
  <body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="{{path('homepage')}}">TIN-Market</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarColor02">
        <ul class="navbar-nav me-auto">

          <li class="nav-item">
            <a class="nav-link active" href="{{path('base_article')}}">Articles
              <span class="visually-hidden">(current)</span>
            </a>
          </li>
          
          <form id="formRecherche" action="">
              <div class="row">
                  <div class="col-md-7">
                      <select name="categorie" class="form-select">
                        <option value='all'>Toutes les catégories</option>
                        {% for cat in cats %}
                            <option value="{{cat.nameCat}}">{{cat.nameCat}}</option>
                        {% endfor %}
                      </select>
                  </div>
                  <div class="col-md-4">
                        <input class="form-control" type="text" id="text" name="search" placeholder="Recherche">
                  </div>
                  <div class="col-md-1">
                      <button type="submit" class="btn btn-success btn-block"> Rechercher</button>
                  </div>
              </div>
          </form>
          
        {#Fin class NavBar#}
        </ul>

      {# Don't touch #}
          {% if is_granted('IS_AUTHENTICATED_FULLY') %}
              <div class="btn-group">
                  <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                      Mon compte
                  </button>
                  <ul class="dropdown-menu dropdown-menu-end">
                      <li><a href="{{ path('info_perso') }}" class="dropdown-item" type="button" style="text-transform: uppercase;font-variant:all-small-caps">mes informations</a></li>
                      {% if is_granted('ROLE_ADMIN') %}
                          <li><a href="{{ path('admin') }}" class="dropdown-item" type="button" style="text-transform: uppercase;font-variant:all-small-caps">admin</a></li>
                      {% endif %}
                      {% if is_granted('ROLE_ACHETEUR') %}
                          <li><a href="{{ path('commande') }}" class="dropdown-item" type="button" style="text-transform: uppercase;font-variant:all-small-caps">mes commandes</a></li>
                      {% endif %}
                      {% if is_granted('ROLE_VENDEUR') %}
                          <li><a href="{{ path('me_article') }}" class="dropdown-item" type="button" style="text-transform: uppercase;font-variant:all-small-caps">ajouter un article</a></li>
                          <li><a href="{{ path('commande') }}" class="dropdown-item" type="button" style="text-transform: uppercase;font-variant:all-small-caps">mes articles</a></li>
                      {% endif %}
                      <li><hr class="dropdown-divider"></li>
                      <li><a href="{{ path('app_logout') }}" class="dropdown-item" type="button" style="text-transform: uppercase;font-variant:all-small-caps">déconnexion</a></li>
                  </ul>
              </div>
              {% if is_granted('ROLE_ACHETEUR') %}
                  <a href="{{ path('panier') }}" class="m-2"><img src="https://img.icons8.com/color/35/000000/shopping-basket.png"/></a>
              {% endif %}
              {% else %}
                  <ul class="navbar-nav">
                      <li class="nav-item">
                          <a class="nav-link active" href="{{ path('app_login') }}" style="text-transform: uppercase;">se connecter</a>
                      </li>
                  </ul>
                  /
                  <ul class="navbar-nav">
                      <li class="nav-item">
                          <a class="nav-link active" href="{{ path('new_user') }}" style="text-transform: uppercase;" >s'inscrire</a>
                      </li>
                  </ul>
          {% endif %}
      {# Don't touch #}
    </div>
  </div>
</nav>
</body>
{% block body %}
    
{% endblock %}


  {% for label, messages in app.flashes %}
      <div class="container">
          <div class="alert alert-{{label}}">
              {% for message in messages %}
                  <p>{{message | raw}}</p>
              {% endfor %}
          </div>
      </div>
  {% endfor %}    </html>

